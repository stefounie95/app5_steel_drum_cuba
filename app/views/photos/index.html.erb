<h1>Liste des photos</h1>

<table class="table"> 
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.name %></td>
      <!-- <td><%= image_tag photo.image_url.to_s %></td> -->

        <td><%= link_to ' Voir ', photo %></td>
        <td><%= link_to ' Editer ', edit_photo_path(photo) %></td>
        <td><%= link_to ' Detruire ', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle Photo', new_photo_path,  class: 'btn btn-success' %>
