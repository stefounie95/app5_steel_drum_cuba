<h1>Liste des musiques</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musics.each do |music| %>
      <tr>
        <td><%= music.name %></td>
        <td><%= link_to 'Voir', music %></td>
        <td><%= link_to 'Editer', edit_music_path(music) %></td>
        <td><%= link_to 'Detruire', music, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle Musique', new_music_path ,  class: 'btn btn-success' %>
